@model HajurKoCarRental.Models.Damage

@{
    ViewData["Title"] = "Create";
}

<style>
    .form-container {
        max-width: 500px;
        margin: 0 auto;
    }
</style>

<div class="mb-2"></div>

<div class="card form-container">
    <div class="card-header">
        <h4>Fill Damage Form</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="requestId" class="control-label"></label>
                <input type="text" asp-for="requestId" class="form-control" value="@ViewData["requestId"]" />
            </div>
            <div class="form-group" hidden>
                <label asp-for="approvedBy" class="control-label"></label>
                <input type="text" asp-for="approvedBy" class="form-control" value="@ViewData["approvedBy"]" />
            </div>
            <div class="form-group" hidden>
                <label asp-for="paidAt" class="control-label"></label>
                <input asp-for="paidAt" class="form-control" />
                <span asp-validation-for="paidAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
