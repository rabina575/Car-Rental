@model HajurKoCarRental.Models.Damage

@{
    ViewData["Title"] = "Delete";
}

@section Styles {
    <style>
        .delete-container {
            background-color: #f8f9fa;
            padding: 30px;
            border-radius: 6px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

            .delete-container h1 {
                font-size: 24px;
                margin-bottom: 30px;
                color: #333;
            }

            .delete-container h3 {
                font-size: 18px;
                margin-bottom: 20px;
            }

            .delete-container h4 {
                font-size: 16px;
                margin-bottom: 15px;
            }
    </style>
}

<h1 class="text-center mb-5">Delete Damage</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="delete-container">
            <h3>Are you sure you want to delete this?</h3>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CarRequest)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CarRequest.customerId)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.User)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.User.Id)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.paidAt)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.paidAt)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger me-2" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
