@model HajurKoCarRental.Models.RepairBill

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center mb-4">RepairBill Detail</h2>
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Damage)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Damage.Description)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.amount)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.amount)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.isPaid)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.isPaid)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.paidAt)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.paidAt)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CreatedAt)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Edit</a>
                <a asp-controller="Damages" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
    